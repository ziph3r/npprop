<%
	records ||= []
%>
<table id = "product-table">
	<tbody>
		<%records.each_slice(5) do |record|%>
			<tr>
			<%count = 1%>
			<%record.each do |r|%>
				<td class = "product-table-block">
					<table>
						<tr>
						 	<td>
						 		<table class = 'product-item'>
						 			<tr>
						 				<td class = 'td-open' data-id = '<%=r.id%>'>
						 					<div class = 'product-details-box'>
						 						<%=link_to product_path(r), {:target => '_blank'} do %>
						 						<div class = "product-img">
							 						<%if r.product_images.any?%>
							 							<img src = "<%=r.product_images.first.image.url(:thumb)%>" />
							 						<%else%>
							 							<div class = "default-img">
							 								<%=image_tag('logo_np.png')%>
							 							</div>
							 						<%end%>
							 					</div>
							 					<%end%>
						 						<div class = 'product-code'>
							 						<%=link_to product_path(r), {:target => '_blank'} do %>
							 							<%=r.code%>
							 						<%end%>
							 					</div>
							 					<div class = 'product-detail'>
							 						<%=r.short_desc%>
							 					</div>
							 					<div class = 'product-price'>
							 						<%=r.web_price%>
							 					</div>
						 					</div>
						 				</td>
						 			</tr>
						 		</table>
						 	</td>
						</tr>
					</table>
				</td>
				<%count += 1%>
			<%end%>
			<%if count <= 5 && count != 1%>
				<%(4-count + 1).times do |t|%>
					<td class = "product-table-block">
						&nbsp;
					</td>
				<%end%>
			<%end%>
			</tr>
		<%end%>
	</tbody>
</table>


