<%=render :partial => '/zones'%>
<div class = 'divide-content'>
	<div class = 'row'>
		<h2>ที่ดินเด่น <%=link_to "ที่ดินทั้งหมด", products_path, {:class => 'pull-right', :style => 'font-size:12px;'}%></h2>
		<div class = 'col-lg-12'>
			<div class = 'divide-content-inner'>
				<%=render :partial => '/tableitem', :locals => {:records => @product_stars}%>
				<%= will_paginate @product_stars %>
			</div>
		</div>
	</div>
</div>
<div class = 'divide-content'>
	<div class = 'row'>
		<h2>ข่าวสาร  <%=link_to "ดูข่าวทั้งหมด", news_index_path, {:class => 'pull-right', :style => 'font-size:12px;'}%></h2>
		<div class = 'col-lg-12'>
			<div class = 'divide-content-inner'>
			<div id ='news-items'>
				<%@newses.each do |news|%>
						<div class ='news-item'>
							<div class = "row">
								<div class = "news-detail-img">
									<%=link_to news_path(news), {} do %>
										<img src="<%=news.image.file.url(:small)%>" />
									<%end%>
								</div>
								<div class = "news-detail-content">
									<div class = 'news-title pull-left'>
										<%=link_to news_path(news), {} do %>
											<%= news.title%>
										<%end%>
									</div>
									<div class = 'news-date pull-right'>
										<%=date_str(news.updated_at)%>
									</div>
									<div class ="clr"></div>
									<div class = "news-p">
											
											<%=news.content%>
									
									</div>
								</div>
							</div>
							
						</div>
					
				<%end%>
				<%=will_paginate @newses%>
			</div>
			</div>
		</div>
	</div>
</div>
