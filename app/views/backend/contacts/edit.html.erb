<div class = 'row'>
	<div class = 'col-lg-12'>
		<h3>แก้ไข <%=@contact.name%></h3>
	</div>
</div>
<div style='clear:both;height:40px;'></div>
<div>
	<%=form_for [:backend, @contact] do |f|%>
		  <%=render :partial => "form", :locals => {:f => f}%>
		  <div class="form-group">
		  		<%=f.submit "บันทึก", {:class => "btn btn-success"}%>
		  		<%=link_to "ย้อนกลับ", backend_contacts_path, {:class => "btn btn-default"}%>
		  </div>
	<%end%>
</div>