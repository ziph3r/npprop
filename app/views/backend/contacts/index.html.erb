<div class = 'row'>
	<div class = 'col-lg-12'>
		<h3>รายชื่อส่วนติดต่อ</h3>
	</div>
</div>
<div class = 'row'>
	<div class = 'col-lg-12' style ='text-align:right;'>
		<%=link_to new_backend_contact_path, {:class => 'btn btn-success'} do %>
			<i class = 'fa fa-plus fw'></i> สร้าง
		<%end%>
	</div>
</div>

<div style='clear:both;height:40px;'></div>
	<%@contacts.each do |contact|%>
		<div class = 'row' style = 'margin-bottom:20px;'>
			<div class = 'col-lg-12'>
				<div class = 'product-box' style = 'border: 1px solid #666;' >
					<div class = 'row'>
						<div class = "col-lg-8">
							<%=contact.name%>
						</div>
						<div class = "col-lg-4" style = 'text-align:right;'>
							Defaul: <%=mark(contact.is_default)%>
						</div>
					</div>
					<div class = 'row'>
						<div class = "col-lg-8">
							<p>
								<%=contact.content%>
							</p>
						</div>
						<div class = "col-lg-4" style = 'text-align:right;'>
							<%=link_to "รายละเอียด", backend_contact_path(contact), {:class => 'btn btn-sm btn-primary'}%>
							<%=link_to "ลบ", backend_contact_path(contact), {
								:data => {:confirm => 'Do you really want to delete this item?'},
								:method => :delete, 
								:class => 'btn btn-sm btn-danger'
							}%>
						</div>
					</div>
				</div>
			</div>
		</div>
	<%end%>
</div>