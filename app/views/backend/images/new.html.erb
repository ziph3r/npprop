<div style='clear:both;height:40px;'></div>
<%=form_for  :image, :url => backend_images_path , :html => {:multipath => true} do |form| %>
	<div class ='row'>
		<div class = 'col-lg-12'>
			<div class="form-group">
		    	<label for="contact_name">ชื่อ</label>
		    	<%=form.text_field :name, {:class => 'form-control'}%>
		  </div>
		</div>
	</div>
	<div class = 'row'>
		<div class ='col-lg-12'>
			<label class="control-label">Upload a file:</label>
			<div class = "controls">
						    
				<%= form.file_field :file, :style => "width: 320px;"%>
				<div style='clear:both;height:20px;'></div>
			     <input class="btn btn-primary" type="submit" value="Upload"/>
						  
			</div>
		</div>
	</div>
	<div style='clear:both;height:40px;'></div>
	<div class = 'row'>
		<div class ='col-lg-12'>    
			<div class="form-group">
			  		
			  		<%=link_to "ย้อนกลับ", backend_images_path, {:class => "btn btn-default"}%>
			  </div>
		</div>
	</div>				    	 
							

					
<%end%> 