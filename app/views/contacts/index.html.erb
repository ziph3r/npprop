<%
        @setting = Setting.first
        @setting = Setting.new if @setting.nil?
%>
<div class="row" style='margin-top:20px;'>
    <div class="col-xs-9 rightmargin">

            <!-- <h1 class="entry-title">ติดต่อเรา</h1> -->
            <div style ='height:20px;'></div>
            <div class="contact-wrapper">
                <div class ='col-xs-12' >
                    <% flash.each do |key, value| %>
                            <%= content_tag :div, value, class: "alert alert-info", style: 'font-size: 14px; line-height:20px;margin-bottom: 10px !important; margin-left:20px;' %>
                    <% end %>
                    <%if @inbox.errors.any? %>
                         <div class = 'divide-content'>
                            <div class = "row alert alert-danger">
                              <h4>ไม่สามารถส่งข้อความได้เนื่องจาก:</h4>
                              <ul id = "error-list" style ='font-size: 14px; line-height:20px;'>
                                <% @inbox.errors.full_messages.each do |msg| %>
                                  <li><%= msg %></li>
                                <% end %>
                              </ul>
                            </div>
                        </div>
                    <%end%>
                </div>
                <div class="col-xs-4 contact_page_company_picture">
                    <img src="http://wpresidence.net/wp-content/uploads/2014/05/313-contact.jpg" class="contact-comapany-logo img-responsive" alt="company logo">
                </div>

                <div class="col-xs-8 contact_page_company_details">
                    <div class="company_headline ">
                        <h2>NP Property
                        <div class="header_social">
                             <a href="#">
                                <i class="fa fa-facebook"></i>
                             </a>
                             <a href="#">
                                <i class="fa fa-twitter"></i>

                        </div>
                        </h2>
                    </div>
                    <div class="agent_detail contact_detail">
                        <i class="fa fa-user"></i>
                        <a href="tel:(305) 555-4446">ณิชชรีย์ ชินบุตร</a>
                    </div>
                    <div class="agent_detail contact_detail">
                        <i class="fa fa-phone"></i>
                        <a href="tel:(305) 555-4446">098-269-9838</a>
                    </div>
                    <div class="agent_detail contact_detail">
                        <i class="fa fa-envelope-o"></i>
                        <a href="mailto:annapx0909@gmail.com">wac_01@hotmail.com</a>
                    </div>
                    <div class="agent_detail contact_detail">
                        <i class="fa fa-home"></i>
                        161/30 ซ.บุญช่วย ถ.พระราม 6 พญาไท กรุงเทพมหาคาร 10400
                    </div>
                </div>
            </div>
            <div class="single-content contact-content">
                <p>
                    <%=@setting.contact_us%>
                </p>

                <div class="agent_contanct_form">
                            <h4 id="show_contact">ส่งข้อความ</h4>

                <%=form_for @inbox, :url => contacts_path, :html => {} do |f|%>
                        <div class="col-xs-12" style= 'margin-bottom: 10px; margin-top:10px;'>
                            <div class="control-group">
                                 <div>
                                    <label class="control-label">ชื่อเรื่อง<span class="form-required" title="This field is required.">*</span></label>
                                </div>
                                <div class="controls">

                                       <%=f.text_field :title, {:style => 'width:100%;', :class => 'form-control'}%>


                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12" style= 'margin-bottom: 10px;'>
                            <div class="control-group">
                                 <div>
                                    <label class="control-label">ชื่อผู้ส่ง<span class="form-required" title="This field is required.">*</span></label>
                                </div>
                                <div class="controls">
                                       <%=f.text_field :sender, {:style => 'width:100%;', :class => 'form-control'}%>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12" style= 'margin-bottom: 10px;'>
                            <div class="control-group">
                                 <div>
                                    <label class="control-label">อีเมล์<span class="form-required" title="This field is required.">*</span></label>
                                </div>
                                <div class="controls">

                                       <%=f.text_field :email, {:style => 'width:100%;', :class => 'form-control'}%>


                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12" style= 'margin-bottom: 10px;'>
                            <div class="control-group">
                                 <div>
                                    <label class="control-label">เบอร์ติดต่อ</label>
                                </div>
                                <div class="controls">

                                       <%=f.text_field :phone, {:style => 'width:100%;', :class => 'form-control'}%>


                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12" style= 'margin-bottom: 10px;'>
                            <div class="control-group">
                                 <div>
                                    <label class="control-label">ข้อความ<span class="form-required" title="This field is required.">*</span></label>
                                </div>
                                <div class="controls">

                                       <%=f.text_area :message, {:style => 'width:100%;height:100px;', :class => 'form-control'}%>


                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12">
                            <input type="submit" class="wpb_button  wpb_btn-info wpb_btn-large" id="agent_submit" value="ส่งข้อความ">
                        </div>

                <%end%>

                </div>
            </div><!-- single content-->

    </div>
</div>
<script type="text/javascript">
   $(document).ready(function() {
     // jQuery('#adv-search-1').removeClass('adv-search-1-close');
     $('#search_wrapper').hide();

   })
</script>